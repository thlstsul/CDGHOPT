{
    "name": "CDGHOPT",
    "version": "0.2.0",
    "manifest_version": 3,
    "description": "http client",
    "action": {
        "default_icon": {
            "19": "logo.png",
            "38": "logo.png"
        }
    },
    "permissions": [
        "tabs",
        "webRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "type": "module",
        "service_worker": "background/background.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'",
        "sandbox": "sandbox allow-scripts"
    }
}